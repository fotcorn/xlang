// RUN: %run --split-input-file %s | %filecheck --match-full-lines %s

func main() {
    const s: string = "hello";
    const c: char = s[1];
    // CHECK: e
    print(c);
}

//---------------------------------------

func main() {
    const s: string = "hello";
    const u: string = s.toUpperCase();
    // CHECK: HELLO
    print(u);
}

//---------------------------------------

func main() {
    const s: string = "HELLO";
    const l: string = s.toLowerCase();
    // CHECK: hello
    print(l);
}

//---------------------------------------

func main() {
    const s: string = "hello";
    const c: char = s[1];
    const i: u32 = c.int();
    // CHECK: 101
    print(i);
}

//---------------------------------------

func main() {
    const c: char = 'a';
    const i: u32 = c.int();
    // CHECK: a
    print(c);
    // CHECK: 97
    print(i);
}

//---------------------------------------

func main() {
    const c: char = 'a';
    // CHECK: a
    if (c == 'a') {
        print("a");
    } 
    if (c == 'a') {
        print("b");
    }
}
